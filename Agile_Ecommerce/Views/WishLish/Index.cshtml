@model IEnumerable<Agile_Ecommerce.Models.WishListItems>

@{
    ViewData["Title"] = "Wishlist";
    Layout = "_Layout";
}

<!-- Thêm CSS vào trang để cải thiện giao diện -->
<style>
    /* Tùy chỉnh bảng sản phẩm */
    .cart_table table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .cart_table table th, .cart_table table td {
            padding: 15px;
            border-bottom: 1px solid #ddd;
        }

        .cart_table table th {
            background-color: #f8f8f8;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

    /* Tùy chỉnh sản phẩm */
    .cart_product {
        display: flex;
        align-items: center;
    }

        .cart_product img {
            margin-right: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .cart_product h3 {
            font-size: 18px;
            font-weight: 500;
        }

            .cart_product h3 a {
                color: #007bff;
                text-decoration: none;
            }

                .cart_product h3 a:hover {
                    text-decoration: underline;
                }

    /* Tùy chỉnh các nút Add to Cart và Remove */
    .btn-default.add-to-cart, .btn_danger {
        padding: 8px 12px;
        border-radius: 5px;
        font-size: 14px;
        text-transform: uppercase;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-default.add-to-cart {
        background-color: #28a745;
        color: white;
        border: none;
    }

        .btn-default.add-to-cart:hover {
            background-color: #218838;
        }

    .btn_danger {
        background-color: #dc3545;
        color: white;
        border: none;
    }

        .btn_danger:hover {
            background-color: #c82333;
        }

    /* Tùy chỉnh giá */
    .price_text {
        font-size: 18px;
        font-weight: bold;
        color: #333;
    }

    /* Căn chỉnh cột */
    .text-center {
        text-align: center;
    }
</style>

<!-- breadcrumb_section - start -->
<div class="breadcrumb_section">
    <div class="container">
        <ul class="breadcrumb_nav ul_li">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li>Wishlist</li>
        </ul>
    </div>
</div>
<!-- breadcrumb_section - end -->
<!-- cart_section - start -->
<section class="cart_section section_space">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="cart_table">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>PRODUCT</th>
                            <th class="text-center">PRICE</th>
                            <th class="text-center">ADD TO CART</th>
                            <th class="text-center">REMOVE</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="cart_product">
                                        <img src="~/images/products/@item.Image" alt="Getyootech - Gadgets Ecommerce Site Template" width="150" height="100">
                                        <h3>
                                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                                                @item.ProductName
                                            </a>
                                        </h3>
                                    </div>
                                </td>
                                <td class="text-center"><span class="price_text">@item.Price</span></td>
                                <td class="text-center">
                                    <a asp-controller="Cart" asp-action="Add" asp-route-Id="@item.Id" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                </td>
                                <td class="text-center">
                                    <form asp-controller="WishLish" asp-action="Remove" method="post">
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <button type="submit" class="btn btn_danger">
                                           @*  <i class="fal fa-trash-alt"></i> *@
                                            Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No items in your wishlist.
            </div>
        }
    </div>
</section>
<!-- cart_section - end -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
