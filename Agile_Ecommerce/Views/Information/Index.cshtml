@using ShoppingOnline.Models
@model UserModel

@{
    ViewData["Title"] = "Account";
    Layout = "_Layout";
}

<!-- account_section - start ================================================== -->
<section class="account_section section_space">
    <div class="container">
        <div class="row">
            <div class="col col-lg-3">
                <div class="account_menu">
                    <h2 class="title_text">My Account</h2>
                    <ul class="account_menu_list ul_li_block">
                        <li class="active"><a href="@Url.Action("Index", "Account")">Account Dashboard</a></li>
                        <ul>
                            <li>
                                <form asp-controller="Account" asp-action="EditProfile" method="get">
                                    <button type="submit">Edit Profile</button>
                                </form>
                            </li>
                            <li>
                                <form asp-controller="Account" asp-action="ChangePassword" method="post">
                                    <button type="submit">Change Password</button>
                                </form>
                            </li>
                            <li>
                                <form asp-controller="Account" asp-action="MyOrders" method="get">
                                    <button type="submit">My Orders</button>
                                </form>
                            </li>
                        </ul>
                        <!-- Add more links as needed -->
                    </ul>
                </div>
            </div>

            <div class="col col-lg-9">
                <div class="account_content_area">
                    <h3>My Dashboard</h3>
                    <ul class="content_layout ul_li_block">
                        <li>
                            <h4><strong>Hello, @Model.FullName!</strong></h4>
                            <p class="mb-0">
                                From your My Account Dashboard you have the ability to view a snapshot of your recent account activity and update your account information. Select a link below to view or edit information.
                            </p>
                        </li>
                        <li>
                            <h4>Contact Information</h4>
                            <p class="mb-0">
                                <strong>Full Name:</strong> @Model.FullName <br />
                                <strong>Username:</strong> @Model.Username <br />
                                <strong>Email:</strong> @Model.Email <br />
                                <strong>Phone Number:</strong> @Model.PhoneNumber <br />
                                <strong>Address:</strong> @Model.Address <br />
                                <strong>City:</strong> @Model.City <br />
                                <strong>Date of Birth:</strong> @Model.DateOfBirth?.ToString("d") <br />
                            </p>
                            <a class="mb-3" href="mailto:@Model.Email">@Model.Email</a>
                            <ul class="btns_group ul_li">
                                <li><a class="btn btn_gray" asp-controller="Account" asp-action="EditProfile">Edit Account Information</a></li>
                                <li><a class="btn btn_gray" asp-controller="Account" asp-action="ChangePassword">Change Password</a></li>
                            </ul>
                        </li>
                        <li>
                            <h4>Profile Image</h4>
                            <img src="@Model.ProfileImage" alt="Profile Image" style="width: 150px; height: auto;" />
                            <a class="btn btn_gray" asp-controller="Account" asp-action="EditProfile">Update Profile Image</a>
                        </li>
                        <!-- Add more sections as needed -->
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    /* General Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Account Section */
    .account_section {
        padding: 40px 0;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .account_menu {
        background-color: #f5f5f5;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .account_menu h2 {
            font-size: 1.5rem;
            color: #555;
            margin-bottom: 20px;
            border-bottom: 2px solid #ff6b6b;
            padding-bottom: 10px;
        }

    .account_menu_list {
        list-style-type: none;
        padding: 0;
    }

        .account_menu_list li {
            margin: 10px 0;
        }

            .account_menu_list li.active a,
            .account_menu_list li a:hover {
                font-weight: bold;
                color: #ff6b6b;
            }

            .account_menu_list li a {
                text-decoration: none;
                color: #333;
                transition: color 0.3s ease;
            }

    .account_content_area {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    h3 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 20px;
    }

    h4 {
        font-size: 1.5rem;
        color: #555;
        margin-bottom: 10px;
    }

    .content_layout {
        list-style-type: none;
        padding: 0;
    }

        .content_layout li {
            margin-bottom: 30px;
        }

    .btns_group {
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #ff6b6b;
        color: white;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #ff4b4b;
        }

    .btn_gray {
        background-color: #999;
        color: white;
        margin-right: 10px;
    }

        .btn_gray:hover {
            background-color: #777;
        }
</style>
<!-- account_section - end ================================================== -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
