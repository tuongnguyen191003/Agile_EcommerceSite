
@{
	int index = 0;
}
<style>
	.carousel-inner {
		/* Remove width: 10%px; */
		height: 400px; /* Or use a different height */
	}

		.carousel-inner .img-responsive {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}
</style>
<section id="slider">
	<!--slider-->
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div id="slider-carousel" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
						<li data-target="#slider-carousel" data-slide-to="1"></li>
						<li data-target="#slider-carousel" data-slide-to="2"></li>
					</ol>

					<div class="carousel-inner">
						@foreach (var slider in ViewBag.Slider)
						{
							<div class="item @(index == 0 ? "active" : "")">
								<div class="col-sm-12">
									<img src="~/images/sliders/@slider.Image" class="girl img-responsive" />
								</div>
							</div>
							index++;
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section><!--/slider-->
